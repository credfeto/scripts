#! /bin/bash


for line in $(find  $(pwd)/* -name '*.git' -printf '%h\n' | sort -u | grep -v .cache)
do 
  echo "$line"
  CURRENT_DIR=$line  


  echo ""
  echo "Retrieving $CURRENT_DIR..."
  git -C "$CURRENT_DIR" remote get-url origin
  git -C "$CURRENT_DIR" fetch origin
  git -C "$CURRENT_DIR" checkout main
  git -C "$CURRENT_DIR" fetch origin
  
  echo " * done"
done