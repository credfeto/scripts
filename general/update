#! /bin/sh
[ -f /usr/bin/flatpak ] && flatpak update -y
[ -f /usr/bin/yay ] && yay -Syu --noconfirm && yay -Sc --noconfirm


[ -f /usr/bin/docker ] && \
   [ -f /usr/bin/docker-compose ] && \
   [ -d /home/markr/work/personal/scripts/docker/baget ] && \
   cd /home/markr/work/personal/scripts/docker/baget && \
   sudo docker compose pull && \
   sudo docker compose up -d && \
   cd
